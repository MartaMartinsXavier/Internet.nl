[Unit]
Description=Internet.nl Unbound recursive Domain Name Server
After=syslog.target network.target
Before=nss-lookup.target
Wants=nss-lookup.target

[Service]
WorkingDirectory=/opt/internetnl/unbound/etc/unbound
Type=simple
ExecStartPre=/opt/internetnl/unbound/sbin/unbound-checkconf
ExecStart=/opt/internetnl/unbound/sbin/unbound -d

[Install]
WantedBy=multi-user.target
